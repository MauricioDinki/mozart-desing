@import "nib"
@import "nib/gradients"
@import "normalize.styl"
@import "fonts.styl"
@import "icons.styl"

naranja_mozart = #FFA504
gris_mozart = #F1F1F1
azul_mozart = #2475E0

body
	box-sizing border-box !important
	&.hidden
		overflow-y hidden

.Header
	background gris_mozart
	position fixed
	top 0
	width 100%
	z-index 3

.Header-button
	color naranja_mozart
	cursor pointer
	font-size 1.9em
	position absolute
	right 0.5em
	top 0.3em
	z-index 1
	
.Header-Logo
	float left
	margin 0.4em 0.4em 0.6em 1em
	padding 0

.Navbar
	background azul_mozart
	position fixed
	text-align center
	top 3.4em
	width 100%
	z-index 2

.Navbar-link
	color #538DEC
	font-size 2.3em
	padding 0.3em
	text-decoration none
	transition color 0.15s
	&:hover
		color naranja_mozart

.Navbar-list
	list-style none
	margin 0
	padding 0
	white-space nowrap
	overflow-x auto
	overflow-y hidden

.Navbar-option
	display inline-block

.OptionMenu
	background #E54D3C
	display none
	height 220px
	width 100%
	overflow hidden

.OptionMenu-option
	display block
	
.OptionMenu-link
	color white
	display block
	padding 1em 0
	margin 0
	position relative
	text-decoration none
	text-align center
	transition 0.5s
	&:hover
		background #E53421

.OptionMenu-list
	margin 0
	padding 0

.Work-author
.Work-date
	color black
	display inline-block
	margin 0.25em 0 0.5em 0

.Work-author
	a
		color black
		font-style italic
		font-weight 600
		text-decoration none

.Work-avatar
	float left
	margin 0.5em 0 0 0.6em

	a
		text-decoration none

		img
			border-radius 50%

.Work-container
	margin-top 6.7em
	padding-top 0.6em
	position relative
	text-align center
	width 100%

.Work-data
	position relative

.Work-image
	height 173px
	margin 0
	position relative
	border-bottom 5px solid azul_mozart

.Work-info
	float right
	width 240px

.Work-item
	box-shadow 2px 2px 10px rgba(black, 0.5)
	display inline-block
	height auto
	margin 0.6em 1em
	position relative
	width 300px
	border 1px solid gray

.Work-title
	font-size 1.1em
	font-style italic
	font-weight 500
	margin 0.8em 0 0 0
	text-align center
	padding-left 0.4em

	a
		color black
		font-family 'mozArt'
		text-decoration none