@import "nib"
@import "nib/gradients"
@import "normalize.styl"
@import "fonts.styl"
@import "icons.styl"

naranja_mozart = #FFA504
gris_mozart = #F1F1F1
azul_mozart = #2475E0
rojo_mozart = #E54D3C

body
	background #EDEDED

.Header
	background white
	height 3.75em
	position fixed
	top 0
	width 100%
	z-index 3

.Header-button
	color naranja_mozart
	cursor pointer
	font-size 1.9em
	position absolute
	right 0.5em
	top 0.3em
	z-index 1
	
.Header-Logo
	float left
	margin 0.4em 0.4em 0.6em 1em
	padding 0

.Login-button
	background #FFBC30
	border none
	border-radius 5px
	color white
	padding 0.4em 0.5em
	width 90%
	margin 0 auto
	display block

.Login-container
	background white
	border 1px solid transparent
	border-radius 20px
	margin 2em auto
	position relative
	top 3.7em
	width 90%

.Login-form
	margin-top 1.5em
	padding 0

.Login-input
	width 90%
	display block
	margin 1em auto
	background-color: #eee;
	border-radius 3px
	color: #777;
	padding 0.5em
	border none
	text-align center

.Login-socialOptContainer
	width 90%
	margin 0.5em auto
	text-align center
	

.Login-socialOption
	font-size 4em
	display inline-block
	text-decoration none
	

.Login-title
	display block
	font-weight 500
	margin 1em
	padding 0
	text-align center
	color gray

.Login-traditional
	height auto
	width 100%

.Navbar
	background azul_mozart
	border-top 5px solid transparent
	position fixed
	text-align center
	top 3.7em
	width 100%
	z-index 2

.Navbar-link
	color #538DEC
	font-size 2.3em
	padding 0.3em
	text-decoration none
	transition color 0.15s
	&:hover
		color naranja_mozart

.Navbar-list
	list-style none
	margin 0
	padding 0
	white-space nowrap
	overflow-x auto
	overflow-y hidden

.Navbar-option
	display inline-block

.OptionMenu
	background linear-gradient(45deg, #B23C2F 0%, rojo_mozart 100%)
	display none
	height 220px
	width 100%
	overflow hidden

.OptionMenu-option
	display block
	
.OptionMenu-link
	color white
	display block
	padding 1em 0
	margin 0
	position relative
	text-decoration none
	text-align center
	transition 0.5s
	&:hover
		background #E53421

.OptionMenu-list
	margin 0
	padding 0

.Work-author
.Work-date
	color black
	display inline-block
	margin 0.25em 0 0.5em 0

.Work-author
	a
		color black
		font-style italic
		font-weight 600
		text-decoration none

.Work-avatar
	float left
	margin 0.5em 0 0 0.6em

	a
		text-decoration none

		img
			border-radius 50%

.Work-container
	margin-top 7em
	padding-top 0.6em
	position relative
	text-align center
	width 100%

.Work-data
	position relative

.Work-image
	height 173px
	margin 0
	position relative
	border-bottom 5px solid azul_mozart

.Work-info
	float right
	width 240px

.Work-item
	box-shadow 2px 2px 10px rgba(black, 0.5)
	display inline-block
	height auto
	margin 0.6em 0.4em
	position relative
	width 300px
	border 1px solid gray

.Work-title
	font-size 1.1em
	font-style italic
	font-weight 500
	margin 0.8em 0 0 0
	text-align center
	padding-left 0.4em

	a
		color black
		text-decoration none


@media screen and (min-width:980px)
	
	#menu-slide
		display block !important

	#button-action
		display none
	
	.OptionMenu
		background transparent
		display inline-block
		position absolute
		right 2em
		width auto
		height 100%
	
	.OptionMenu-option
		display inline-block
		margin 0 0.5em
		
	.OptionMenu-link
		color #6E5353
		font-size 0.9em
		height 26px
		line-height 26px
		padding 1em
		transition 0s
		border-top 5px solid transparent
		transition 0.3s border-top-color
		&:before
			height 1.5em
			border-right: 1px solid #000
			content ''
			position absolute
			top 17px
			right -1em
		&:hover
			background transparent
			border-top-color red
			