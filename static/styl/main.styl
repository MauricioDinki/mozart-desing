@import "nib"
@import "normalize.styl"
@import "fonts.styl"
@import "icons.styl"

naranja_mozart = #FFA504
gris_mozart = #F1F1F1
azul_mozart = #2475E0

.Header
	background gris_mozart
	border-bottom 2px solid azul_mozart
	position fixed
	top 0
	width 100%

.Header-button
	font-size 1.9em
	position absolute
	right 0.5em
	top 0.3em
	z-index 1
	
.Header-Logo
	float left
	margin 0.4em 0.4em 0.6em 1em
	padding 0

.OptionMenu
	background linear-gradient(45deg, #B27301 0%, #FFAE1D 100%)
	height 100%
	position fixed
	right -265px
	transition 0.4s
	width 250px
	z-index 999
	box-shadow 0px 0px 15px #000
	&.is-active
		right 0

.OptionMenu-avatar
	display inline
	margin 0
	img
		border-radius 50%

.OptionMenu-link
	text-decoration none
	color black

.OptionMenu-list
	padding 0

.OptionMenu-option
	display block
	position relative
	padding 1em 1em

.OptionMenu-title
	font-weight 500
	text-align center

.OptionMenu-username
	position absolute
	line-height 50px
	margin-left 1em
	font-weight 700
	
	
	