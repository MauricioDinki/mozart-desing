.Upload-button
	background #FFBC30
	border none
	border-radius 5px
	color white
	display block
	margin 0 auto
	padding 0.4em 0.5em
	width 90%
	
.Upload-container
	background white
	border 1px solid transparent
	border-radius 20px
	margin 0 auto
	position relative
	top 5.5em
	width 90%
	margin-bottom 7em

.Upload-title
	font-weight 500
	color gray
	text-align center

.Upload-select
.Upload-textarea
.Upload-input
	background-color #eee
	border none
	border-radius 3px
	color #777
	display block
	margin 1em auto
	padding 0.5em
	text-align center
	width 90%	

.Upload-textarea
	height 14em

.Upload-fileContainer
	background-color #eee
	margin 1em auto
	display block
	width 90%
	position relative
	padding 0.5em 0
	text-align center
	overflow hidden

.Upload-filename
	text-align center
	position relative 
	width 90%
	display block
	margin 0 auto
	overflow hidden
	color #777

.Upload-file
	position absolute
	top 0
	width 100%
	bottom 0
	right 0
	margin 0
	padding 0
	cursor pointer
	opacity 0
	// filter alpha(opacity=0)*/