.Upload-button
	background #FFBC30
	border none
	border-radius 5px
	color white
	display block
	margin 0 auto
	padding 0.4em 0.5em
	width 90%
	
.Upload-container
	background white
	border-radius 20px
	margin 1em auto
	overflow hidden
	position relative
	top 4.5em
	width 90%

.Upload-file
	bottom 0
	cursor pointer
	margin 0
	opacity 0
	padding 0
	position absolute
	right 0
	top 0
	width 100%

.Upload-fileContainer
	background-color #eee
	display block
	margin 1em auto
	overflow hidden
	padding 0.5em 0
	position relative
	width 90%

.Upload-fileName
	color #777
	display block
	margin 0 auto
	overflow hidden
	position relative 
	margin-right 0.5em
	padding 0em 0.5em

.Upload-form
	margin-bottom 2em
	overflow hidden	

.Upload-input
.Upload-select
.Upload-textarea
	background-color #eee
	border none
	border-radius 3px
	color #777
	display block
	margin 1em auto
	padding 0.5em
	width 90%

.Upload-textarea
	height 14em

.Upload-title
	color gray 
	font-weight 500
	margin 1em 0
	position relative
	text-align center

.Bottom-page
	height 0.75em
	position relative
	top 5em