.Login-button
	background #FFBC30
	border none
	border-radius 5px
	color white
	display block
	margin 0 auto
	padding 0.4em 0.5em
	width 90%

.Login-container
	background white
	border 1px solid transparent
	border-radius 20px
	margin 0 auto
	position relative
	width 90%

.Login-form
	margin-top 1.5em
	padding 0

.Login-input
	background-color: #eee;
	border none
	border-radius 3px
	color: #777;
	display block
	margin 1em auto
	padding 0.5em
	text-align center
	width 90%

.Login-socialOptContainer
	margin 0.5em auto
	text-align center
	width 90%
	
.Login-socialOption
	display inline-block
	font-size 4em
	text-decoration none
	
.Login-title
	color gray
	display block
	font-weight 500
	margin 1em
	padding 0
	text-align center

.Login-traditional
	height auto
	width 100%

@media screen and (min-width:980px)

	.Login-container
		width 70% !important

@media screen and (min-width:480px)
		
	.Login-button
		margin-bottom 3em
		width 70%

	.Login-container
		margin-top 2.5em
		width 90%
	
	.Login-form
		border-top 2px solid azul_mozart
		display block 
		margin 0 auto
		width 80%
	
	.Login-input
		margin 2em auto
	
	.Login-social
		border-top 2px solid azul_mozart
		display block
		margin 0 auto
		width 80%
	
	.Login-socialOption
		margin 0em 0.3em