.Register-Button
	background #FFBC30
	border none
	border-radius 5px
	color white
	display block
	margin 0 auto
	padding 0.4em 0.5em
	width 90%
	
.Register-container
	background white
	border 1px solid transparent
	border-radius 20px
	margin 1em auto
	position relative
	width 90%

.Register-input
	background-color: #eee;
	border none
	border-radius 3px
	color: #777;
	display block
	margin 1em auto
	padding 0.5em
	text-align center
	width 90%

.Register-title
	font-weight 500
	color gray
	text-align center
	margin 1em

@media screen and (min-width:980px)
	
	.Register-container
		width 60% !important

@media screen and (min-width:480px)
		
	.Register-Button
		margin-bottom 2em
		width 70%

	.Register-container
		margin-top 2.5em
		
	.Register-input
		margin 2.5em auto
	
	.Register-form
		border-top 2px solid azul_mozart
		width 90%
		display block
		margin 0 auto